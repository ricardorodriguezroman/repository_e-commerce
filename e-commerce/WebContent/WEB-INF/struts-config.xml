<?xml version="1.0" encoding="UTF-8"?>
 		
 		<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="helloWorldStrutsForm"
			type="com.ecommerce.app.struts.configuration.initial.HelloWorldStrutsForm" />
	</form-beans>

	<action-mappings>

		<action path="/helloWorld"
			type="com.ecommerce.app.struts.configuration.initial.HelloWorldAction"
			name="helloWorldStrutsForm">
			<forward name="success" path="/helloWorld.jsp" />
		</action>

		<action path="/tiles" type="org.apache.struts.actions.ForwardAction"
			parameter="/tiles/pages/layout.jsp" />

	</action-mappings>

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
	</plug-in>

</struts-config>